<?xml version="1.0" encoding="UTF-8"?>
<!--指定Hibernate3映射文件的DTD信息-->
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<!--hibernate-mapping是映射文件的根元素-->
<hibernate-mapping package="net.xiayule.reading.db.model" >
<!-- 每个class元素对应一个持久话对象-->
    <class name="Book" table="book">
        <!--id元素定义持久化对象-->
        <id name="id" column="bookId">
            <!--指定主键生成策略-->
            <generator class="identity"/>
        </id>
        <!-- property元素定义常规属性-->
        <property name="bookName" type="java.lang.String"/>
        <property name="imgUrl" type="java.lang.String"/>
        <property name="bookDesc" type="java.lang.String"/>
        <property name="publisher" type="java.lang.String"/>
        <property name="isbn" type="java.lang.String"/>
        <property name="date" type="java.util.Date"/>

        <set name="authors" table="book_authors" lazy="false">
            <key column="bookId"/>
            <element type="string" column="author" not-null="true"/>
        </set>
    </class>
</hibernate-mapping>
